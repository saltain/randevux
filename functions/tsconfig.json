{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "outDir": "lib",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
